{
  "compileOnSave": false,
  "compilerOptions": {
    "noImplicitAny": false,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@rulecms/flexbox-based-ui-composer": [
        "flexbox-based-ui-composer/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
